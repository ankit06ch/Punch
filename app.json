{
  "expo": {
    "name": "punch",
    "slug": "punch",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "punch",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Punch to use your location to show nearby restaurants and places."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "0d2a3762-6d85-49da-86c5-37ce01b7e0af"
      }
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.punchrewards.punchrewards",
      "associatedDomains": [
        "applinks:punchrewards.app",
        "applinks:www.punchrewards.app"
      ],
      "infoPlist": {
        "NFCReaderUsageDescription": "This app uses NFC to read restaurant loyalty cards and rewards tags.",
        "NSNearbyInteractionUsageDescription": "This app uses nearby interaction to enhance NFC scanning.",
        "NSBluetoothAlwaysUsageDescription": "This app uses Bluetooth to connect with nearby devices.",
        "NSBluetoothPeripheralUsageDescription": "This app uses Bluetooth to connect with nearby devices."
      },
      "entitlements": {
        "com.apple.developer.nfc.readersession.formats": ["NDEF"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.punchrewards.punchrewards",
      "permissions": [
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.BLUETOOTH_SCAN",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            { "scheme": "https", "host": "punchrewards.app" },
            { "scheme": "https", "host": "www.punchrewards.app" }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyAn7tCrPc4giA2bWJnscoWpDpVLuWi5w08"
        }
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    }
  }
}
